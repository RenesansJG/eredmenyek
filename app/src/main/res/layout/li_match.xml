<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerRL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/match_row_height"
    android:padding="@dimen/match_row_padding"
    android:background="@drawable/row_background">

    <TextView
        android:id="@+id/dateTimeTV"
        android:layout_width="@dimen/match_row_left_text_width"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="start"/>

    <TextView
        android:id="@+id/scoreTV"
        android:layout_width="@dimen/match_row_center_text_width"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/liveTV"
        android:layout_width="@dimen/match_row_right_text_width"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="end"
        android:textStyle="bold"
        android:textColor="@color/live_text"
        android:textAllCaps="true"/>

    <ImageView
        android:id="@+id/homeTeamIV"
        android:layout_width="@dimen/match_row_image_width"
        android:layout_height="@dimen/match_row_image_height"
        android:layout_marginLeft="@dimen/match_row_inner_margin"
        android:layout_marginRight="@dimen/match_row_inner_margin"
        android:layout_toLeftOf="@id/scoreTV"
        android:layout_toStartOf="@id/scoreTV"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/awayTeamIV"
        android:layout_width="@dimen/match_row_image_width"
        android:layout_height="@dimen/match_row_image_height"
        android:layout_marginLeft="@dimen/match_row_inner_margin"
        android:layout_marginRight="@dimen/match_row_inner_margin"
        android:layout_toRightOf="@id/scoreTV"
        android:layout_toEndOf="@id/scoreTV"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/homeTeamTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/dateTimeTV"
        android:layout_toEndOf="@id/dateTimeTV"
        android:layout_toLeftOf="@id/homeTeamIV"
        android:layout_toStartOf="@id/homeTeamIV"
        android:layout_centerVertical="true"
        android:gravity="end"/>

    <TextView
        android:id="@+id/awayTeamTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/awayTeamIV"
        android:layout_toEndOf="@id/awayTeamIV"
        android:layout_toLeftOf="@id/liveTV"
        android:layout_toStartOf="@id/liveTV"
        android:layout_centerVertical="true"
        android:gravity="start"/>

</RelativeLayout>
